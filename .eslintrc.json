{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off",
        "no-constant-condition": "off",
        "no-unused-vars": [
            "error", { 
            "argsIgnorePattern": "^_.+",
            "varsIgnorePattern": "(^_.*)|(^util$)"
        }]
    }
}